<% content_for :header do %>
  <%= javascript_include_tag 'canvas', 'tiles', 'players' %>
  <%= stylesheet_link_tag 'play', 'canvas' %>

  <script>
    var board = <%= @game_instance.board.to_json %>;
    var playersJson = <%= @game_instance.players.to_json %>;
    var actionsJson = <%= @game_instance.player_options.to_json %>;
    var usersPlayers = <%= @users_players.to_json %>;
  </script>
<% end %>

<div id="current-player"><%= @game.current_player.display_name %></div>
<div id="actions">
  <%= render :partial => 'action', :collection => @game_instance.player_options %>
</div>
<div class="clearall"></div>
<div id="map"></div>
<div class="clearall"></div>
<div id="players"></div>
