<div id="<%= dom_id @game %>" class="<%= dom_class @game %>">
  <h2><%= h @game.name %></h2>
  <% if current_user == @game.owner %>
    <div class="owner-actions">
     <%= link_to 'Edit', edit_game_url(@game), :class => 'edit' %>
    </div>
  <% end %>
  
<% if @game.started? %>
      <%= link_to 'Play!', play_game_url(@game), :class => 'start', :method => 'get' %>
    <% else %>
      <%= button_to 'Start game', start_game_url(@game), :class => 'start btn primary', :method => 'put' %>
  <% end %>
  
  <div class="clearall"></div>
  
  <p>Status: <%= friendly_game_status @game %></p>
  <p><%= h @game.comment %></p>
  <p>Players:
    <ul>
      <% @game.users.each do |u| %>
      <li><%= h u.display_name %></li>
      <% end %>
    </ul>
  </p>
</div>
