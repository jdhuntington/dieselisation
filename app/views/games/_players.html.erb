<% first = true %>
<div id="players">
<% @game_instance.players.each do |player| %>
  <div class="player <%= first ? 'expanded' : 'collapsed' -%>" id="dieselisation_player_<%=  player.identifier -%>">
    <div class="toggler"><input type="button" value="+/-" /></div>
    <div class="main-stats">
      <div class="name"><%= h @users_players[player.identifier] %></div>
      <div class="cash"><%= number_to_currency player.available_balance, :precision => 0 %></div>
    </div>
    <div class="secondary-stats">
      <div class="certificates">
	<h3>Assets:</h3>
	<ul>
	<% player.assets.each do |asset| %>
	  <li><%= asset.name %></li>
	<% end %>
	</ul>
      </div>
    </div>
    <div class="clearall"></div>
  </div>
  <% first = false %>
<% end %>
</div>
<div class="clearall"></div>
